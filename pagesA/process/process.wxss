page{
  background: #493131;
  padding-bottom: 30rpx;
}

.processItem{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.processItem:last-child{
  padding-bottom: 100rpx;
}

.processImg{
  width: 76%;
  height: 280rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.processImg image{
  width: 100%;
  height: 100%;
}

.processContent{
  width: 76%;
  display: flex;
  margin: 0 auto;
  align-items: center;
  margin-top: 30rpx;
}

.number{
  font-size: 44rpx;
  font-style: oblique;
  color: #fff;
  font-weight: bold;
}

.content{
  font-size: 30rpx;
  color: #fff;
  padding-left: 30rpx;
  line-height: 45rpx;
}