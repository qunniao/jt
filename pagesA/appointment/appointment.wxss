page{
  background: #F4F4F4;
}

.type_name_phone{
  width: 95%;
  margin-left: 2.5%;
  background: #fff;
  margin-top: 20rpx;
  box-shadow: 0px 0px 20rpx 4rpx rgb(207, 206, 206);
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}

.question{
  font-size: 30rpx;
  color: #493131;
  padding: 20rpx;
}

.type{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}

.type text{
  font-size: 30rpx;
  padding: 16rpx 50rpx;
  background: #a59898;
  color: #fff;
  border-radius: 10rpx;
}

.type text:nth-child(2){
  margin: 0 100rpx;
}

.type .active{
  background: #493131;
  color: #fff;
}

.name{
  width: 95%;
  margin-left: 2.5%;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 80rpx;
  border-bottom: 1px solid #ECECEC;
  display: flex;
}

.xingming{
  font-size: 30rpx;
  color: #666;
}

.name input{
  width: 85%;
  height: 100rpx;
  line-height: 100rpx;
}

.phone{
  width: 95%;
  margin-left: 2.5%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
}

.dianhua{
  font-size: 30rpx;
  color: #666;
}

.phone input{
  width: 76%;
  height: 100rpx;
  line-height: 100rpx;
}

.messageBj{
  width: 100%;
  height: 500rpx;
  margin-top: 20rpx;
}

.message{
  width: 95%;
  height: 480rpx;
  margin-left: 2.5%;
  margin-top: 20rpx;
  position: relative;
  z-index: 1000;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  background: #fff;
  box-shadow:0px 0px 20rpx 4rpx rgb(207, 206, 206);
  border-radius: 10rpx;
}

.title{
  font-weight: bold;
  padding-left: 20rpx;
  padding-top: 40rpx;
}

.company{
  padding-left: 20rpx;
  padding-top: 30rpx;
  color: #333333;
}

.address{
  width: 69%;
  padding-left: 20rpx;
  padding-top: 30rpx;
  color: #666;
}

.time{
  padding-left: 20rpx;
  padding-top: 30rpx;
  color: #666;
}

button{
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  margin-top: 100rpx;
  background: #493131;
  border-radius: 45rpx;
  color: #fff;
  font-size: 32rpx;
}